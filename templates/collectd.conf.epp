<LoadPlugin python>
  Globals true
</LoadPlugin>

<Plugin python>
    ModulePath "$INSTALL_HOME/collectd-ceilometer-plugin"
    LogTraces true
    Interactive false
    Import "collectd_ceilometer.plugin"

    <Module "collectd_ceilometer.plugin">

        # Verbosity 1|0
        #VERBOSE 0

        # Batch size
        BATCH_SIZE 3

        # Service endpoint addresses
        OS_AUTH_URL "<%=$public_url-%>"

        # Ceilometer address
        #CEILOMETER_ENDPOINT
        CEILOMETER_URL_TYPE "<%=$public_url-%>"

        # Ceilometer timeout in ms
        CEILOMETER_TIMEOUT "<%=$timeout-%>"

        # # Ceilometer user creds
        OS_USERNAME "<%=ceilo_username-%>"
        OS_PASSWORD "<%=ceilo_password-%>"
        OS_TENANT_NAME "services"

    </Module>
</Plugin>


